# Production Environment Variables
# Copy this file to .env and adjust values as needed

# Project configuration
PROJECT_NAME=ovh-dyndns-client

# Docker version
DOCKER_OVH_VERSION=stable

# Host configuration
# Path to hosts.json file on the host machine (required)
HOSTS_LOCAL_PATH=/path/to/hosts.json

# Path to hosts.json file inside container (only modify for development)
# Default: /app/config/hosts.json
# HOSTS_APP_PATH=/app/config/hosts.json

# Update interval (in seconds)
UPDATE_INTERVAL=300

# Logger configuration
LOGGER_NAME=ovh-dydns
LOGGER_LEVEL=INFO

